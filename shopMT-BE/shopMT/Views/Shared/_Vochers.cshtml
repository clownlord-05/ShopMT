 <!-- Vouchers Tab -->
<div id="adminVouchers" class="admin-content hidden">
    <div class="admin-header">
        <h4 class="admin-title">Quản lý Voucher</h4>
        <button id="addVoucherBtn" class="admin-btn add-btn">
            <i class="fas fa-plus"></i> Tạo voucher
        </button>
    </div>
    <div class="admin-table-container">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Mã voucher</th>
                    <th>Giảm giá</th>
                    <th>Ngày hết hạn</th>
                    <th>Trạng thái</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody id="adminVouchersList">
                <!-- Vouchers will be loaded here -->
            </tbody>
        </table>
    </div>
</div>
<!-- Add Voucher Modal -->
<div id="addVoucherModal" class="modal hidden   ">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Tạo voucher mới</h3>
            <button id="closeAddVoucherModal" class="modal-close">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <form id="addVoucherForm" class="form">
            <div class="form-group">
                <label class="form-label">Mã voucher</label>
                <input type="text" id="newVoucherCode" class="form-input" placeholder="VD: SAVE20" required>
            </div>
            <div class="form-group">
                <label class="form-label">Loại giảm giá</label>
                <select id="newVoucherType" class="form-input" required>
                    <option value="">Chọn loại</option>
                    <option value="percent">Phần trăm (%)</option>
                    <option value="fixed">Số tiền cố định (VNĐ)</option>
                </select>
            </div>
            <div class="form-group">
                <label class="form-label">Giá trị giảm</label>
                <input type="number" id="newVoucherDiscount" class="form-input" required>
            </div>
            <div class="form-group">
                <label class="form-label">Ngày hết hạn</label>
                <input type="date" id="newVoucherExpiry" class="form-input" required>
            </div>
            <button type="submit" class="form-btn">Tạo voucher</button>
        </form>
    </div>
</div>